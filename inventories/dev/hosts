# Development Environment Inventory

[loadbalancers]
lb-dev-01 ansible_host=192.168.1.10

[webservers]
web-dev-01 ansible_host=192.168.1.20
web-dev-02 ansible_host=192.168.1.21

[dev:children]
loadbalancers
webservers

[dev:vars]
# Environment identifier
env_name=dev
env_color=blue

# Connection settings
ansible_user=vagrant
ansible_ssh_private_key_file=~/.ssh/id_rsa
ansible_python_interpreter=/usr/bin/python3

